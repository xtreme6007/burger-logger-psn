
<div class="area" >
<h1 class="text-center">Eat-Da-Fliping-Burgers!</h1>
<div class="container main">
  <div class = "row">
<div class="col-6" id ="onhold">
<h2>Burgers on hold!</h2>
{{!-- List of Burgers Not devoured--}}
<ul class="holdBurg">

  {{!--for each burger where devoured = "false"--}}
  {{#each burgers}}
  
    {{#unless devoured}}
      <li>
	{{burger_name}}

	<button class="change-devoured" data-id="{{id}}" data-newDevoured="{{devoured}}">
		Devour!
	</button>

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-6">
<h2>Burgers that are devoured!</h2>
{{!-- All burgers where devoured = true --}}
<ul>
  {{#each burgers}}
    {{#if devoured}}
      
      <li>
	{{burger_name}}

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>
<div class="text-center burgForm">
<h2 class ="text-center">Add a burger</h2>
<form class="burger-form container">

    <label class="text-center" for="newBurger">Burger Name:</label>
    <input type="text" id="newBurger" name="newBurger">
  <br>
  <button type="submit">Add Burger</button>
</form>
</div>


